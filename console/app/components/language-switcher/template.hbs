<div class="language-switcher" ...attributes>
  <div class="relative">
    <select {{on "change" this.changeLanguage}} class="form-select pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm rounded-md">
      <option value="en-us" selected={{eq this.currentLocale "en-us"}}>English</option>
      <option value="fa-ir" selected={{eq this.currentLocale "fa-ir"}}>فارسی (Persian)</option>
      <option value="ar-ae" selected={{eq this.currentLocale "ar-ae"}}>العربية (Arabic)</option>
      <option value="pt-br" selected={{eq this.currentLocale "pt-br"}}>Português (Portuguese)</option>
      <option value="bg-bg" selected={{eq this.currentLocale "bg-bg"}}>Български (Bulgarian)</option>
      <option value="vi-vn" selected={{eq this.currentLocale "vi-vn"}}>Tiếng Việt (Vietnamese)</option>
    </select>
    <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
      <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
        <path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/>
      </svg>
    </div>
  </div>
</div>